package chap01;

public class triangleLB1_2 {
	// 왼쪽 아래가 직각인 이등변삼각형을 출력하는 메서드를 작성하세요
	static void triangleLB(int n) {
		for(int i = 1; i<=n; i++) {
			for(int j = 1; j<=i; j++) {
				System.out.print("*");
			}
			System.out.println();
		}
	}

	public static void main(String[] args) {
		Scanner input = new Scanner(System.in);
		int n;

		System.out.println("왼쪽 아래가 직각인 이등변 삼각형을 출력 ");
		System.out.print("몇 단 삼각형입니까? : ");
		n = input.nextInt();
		triangleLB(n);
	}
}

